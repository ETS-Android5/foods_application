<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_default"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/upLoadProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:elevation="24dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/uploadLinearView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button_default"
        android:elevation="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="음식점 이름"
                android:textColor="@color/app_font_3"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" : "
                android:textColor="@color/app_font_3"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/set_restaurant_edit"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="16"
                android:background="@null"
                android:hint="음식점의 이름을 등록해주세요."
                android:textColor="@color/app_font_2" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/bar_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="위치"
                android:textColor="@color/app_font_3"
                android:textSize="12dp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" : "
                android:textColor="@color/app_font_3"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/set_address"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="16"
                android:background="@null"
                android:hint="주소를 입력해주세요."
                android:textColor="@color/app_font_2"
                android:textSize="12dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/bar_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="음식 이름"
                android:textColor="@color/app_font_3"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" : "
                android:textColor="@color/app_font_3"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/set_food_name"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:background="@null"
                android:hint="음식이름을 입력하세요."
                android:textColor="@color/app_font_2"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:baselineAligned="false"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="2dp"
                    android:text="음식분야 "
                    android:textColor="@color/app_font_3"
                    android:textSize="8dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="viewEnd" />

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/bar_color" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식점을 대표할 사진을 올려주세요"
            android:textColor="@color/app_font_2"
            android:textSize="10dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:background="@android:drawable/ic_menu_camera"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_camera" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/bar_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="8"
                    android:text="당신의 평점"
                    android:textColor="@color/app_font_3"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/ratingPoints"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="3.5"
                    android:textColor="@color/ActionbarColor"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="점    "
                    android:textAlignment="viewEnd"
                    android:textColor="@color/app_font_3"
                    android:textSize="13dp" />


            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar"
                style="@android:style/Widget.Material.Light.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:isIndicator="true"
                android:max="10"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/bar_color" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/comment"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elegantTextHeight="false"
                android:gravity="top"
                android:hint="이 음식점에 대해 설명해주세요 ..."
                android:textColor="@color/app_font_3" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

</RelativeLayout>


