<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@color/button_default"
    android:orientation="vertical"
    tools:context="com.kchksw.foods6.Activity.FirstUploadActivity">


    <android.support.v7.widget.ButtonBarLayout
        android:id="@+id/Get_Place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_button_background"
        android:baselineAligned="false"
        android:layout_marginTop="15dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="   "
            android:textAlignment="viewStart"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/ic_search_background" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="   "
            android:textAlignment="viewStart"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/search"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:fadingEdge="horizontal"
            android:text="장소 검색"
            android:textAlignment="viewStart"
            android:textColor="@color/app_font_2"
            android:textSize="16dp" />


    </android.support.v7.widget.ButtonBarLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/bar_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="위치 : "
            android:textColor="@color/app_font_3"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="     장소를 검색해주세요"
            android:textColor="@color/app_font_2"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/bar_color" />
    <fragment
        android:id="@+id/mapView"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/bar_color" />

</LinearLayout>
